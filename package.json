{
    "name": "anime-list",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "run-p type-check \"build-only {@}\" --",
        "build:content": "vite build --config vite.content.config.ts",
        "build:manifest": "node dist/src/manifest/index.js > dist/manifest.json",
        "build:ext": "npm run clear-dist && npm run build && npm run build:content && npm run build:manifest",
        "build-only": "vite build",
        "preview": "vite preview",
        "test:unit": "vitest run",
        "test:unit:watch": "vitest",
        "test:unit:coverage": "vitest run --coverage",
        "test:unit:coverage:ui": "vitest run --coverage && open coverage/index.html",
        "test:e2e": "playwright test",
        "type-check": "vue-tsc --build --force",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
        "format": "prettier --write src/",
        "format:check": "prettier --check src/",
        "clear-dist": "rm -rf dist"
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.11",
        "@types/chrome": "^0.0.332",
        "@vueuse/core": "^13.6.0",
        "pinia": "^2.3.1",
        "vue": "^3.5.17",
        "vue-toastification": "^2.0.0-rc.5",
        "vue-router": "^4.5.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.54.0",
        "@pinia/testing": "^0.1.7",
        "@rushstack/eslint-patch": "^1.12.0",
        "@tsconfig/node20": "^20.1.6",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^20.19.6",
        "@vitejs/plugin-vue": "^6.0.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.5.1",
        "eslint": "^8.57.1",
        "eslint-plugin-playwright": "^1.8.3",
        "eslint-plugin-vue": "^9.33.0",
        "jsdom": "^24.1.3",
        "npm-run-all2": "^6.2.6",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4.1.11",
        "typescript": "~5.6.0",
        "vite": "^7.0.4",
        "vite-plugin-vue-devtools": "^7.7.7",
        "vitest": "^3.2.4",
        "vue-tsc": "^2.2.12"
    }
}
